{{#let
  (component @layers.marker)
  as |marker|}}
  <marker
    @location={{hash lat=@facility.lat lon=@facility.lon}}
    @icon={{this.icon}}
    @onClick={{action @onClick}}
    as |marker|>
    <marker.tooltip @sticky={{true}}>
      {{@facility.name}}
      {{#if @facility.notes}}
        <br>{{@facility.notes}}
      {{else if @facility.closure}}
        <br>{{if @facility.syntheticClosure 'possible' 'proposed'}} closure {{moment-format @facility.closure "MMMM ’YY"}}
      {{/if}}
      {{#if @facility.cuts}}
        {{#each-in @facility.cuts as |cut date|}}
          <br>{{cut}}: {{moment-format date "MMM ’YY"}}
        {{/each-in}}
      {{/if}}
    </marker.tooltip>
  </marker>
{{/let}}