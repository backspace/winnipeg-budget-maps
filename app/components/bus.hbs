{{#let
  (icon iconUrl="/markers/bus.svg" iconSize=(point @markerLength @markerLength) iconAnchor=this.iconAnchor)
  (component @layers.marker)
  (component @layers.geoJSON)
  as |busIcon markerLayer geoJSON|}}
  <markerLayer
    @location={{this.position}}
    @icon={{busIcon}}
    @zIndexOffset={{10000}}
    as |marker|>
    <marker.tooltip @sticky={{true}}>
      bus
    </marker.tooltip>
  </markerLayer>
  {{#if @debug}}
    <geoJSON
      @geoJSON={{@path}}
    />
  {{/if}}
{{/let}}